{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "tallcms/tallcms",
    "type": "project",
    "description": "A modern CMS built on Laravel, Livewire, Alpine.js, and Filament. The TALL stack CMS.",
    "keywords": ["cms", "laravel", "livewire", "filament", "tallstack", "alpinejs", "tailwind"],
    "license": "MIT",
    "homepage": "https://tallcms.com",
    "support": {
        "issues": "https://github.com/tallcms/tallcms/issues",
        "source": "https://github.com/tallcms/tallcms",
        "docs": "https://tallcms.com/docs"
    },
    "authors": [
        {
            "name": "TallCMS",
            "email": "hello@tallcms.com",
            "homepage": "https://tallcms.com"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "./packages/tallcms/cms",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.369",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "league/flysystem-aws-s3-v3": "^3.30",
        "symfony/yaml": "^7.4",
        "tallcms/cms": "^2.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "knuckleswtf/scribe": "^5.6",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/SiteSettings.php",
            "app/Helpers/MenuHelpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "npm install",
            "npm run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "@php artisan storage:link --ansi",
            "@php -r \"echo PHP_EOL . '  TallCMS installed successfully!' . PHP_EOL . PHP_EOL . '  Next steps:' . PHP_EOL . '    1. cd ' . basename(getcwd()) . PHP_EOL . '    2. npm install && npm run build' . PHP_EOL . '    3. php artisan serve' . PHP_EOL . '    4. Visit http://localhost:8000/install' . PHP_EOL . PHP_EOL . '  Documentation: https://tallcms.com/docs' . PHP_EOL . PHP_EOL;\""
        ],
        "pre-package-uninstall": [
            "Illuminate\\Foundation\\ComposerScripts::prePackageUninstall"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
